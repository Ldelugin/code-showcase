<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup Label="TemplatePackageInfo">
        <Authors>-- redacted --</Authors>
        <Title>-- redacted --</Title>
        <Description>-- redacted --</Description>
    </PropertyGroup>

    <PropertyGroup Label="PackageConfiguration">
        <TargetFramework>net8.0</TargetFramework>
        <PackageType>Template</PackageType>
        <PackageId>-- redacted --.Template</PackageId>
        <PackageTags>dotnet-new;templates;businss-rules;-- redacted --</PackageTags>
    </PropertyGroup>

    <PropertyGroup Label="BuildConfiguration">
        <!-- Generate the NuGet package on a build-->
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <NoPackageAnalysis>true</NoPackageAnalysis>
        <!--Set to False to exclude all binaries generated by the compiler from the NuGet package-->
        <IncludeBuildOutput>False</IncludeBuildOutput>
        <!-- This makes sure that the files set as content are stored in the content folder in the NuGet package-->
        <ContentTargetFolders>content</ContentTargetFolders>
        <!-- Set to true to include any file the project sets as content in the NuGet package-->
        <IncludeContentInPack>true</IncludeContentInPack>
        <!-- Suppresses a warning message that doesn't apply to template package projects-->
        <NoWarn>$(NoWarn);NU5128</NoWarn>
        <!-- Ensures that files and folders that start with . (like .gitignore) are part of the template-->
        <NoDefaultExcludes>true</NoDefaultExcludes>
    </PropertyGroup>

    <ItemGroup>
        <Compile Include="content\GlobalAssembly.cs" />
        <Content Include="content\**\*" Exclude="content\**\bin\**;content\**\obj\**;**\.idea\**" />
        <Compile Remove="**\*" />
    </ItemGroup>

</Project>
